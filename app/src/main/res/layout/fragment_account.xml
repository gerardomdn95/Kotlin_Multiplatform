<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

    <EditText android:id="@+id/fragment_account_et_location"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textCapWords"
              android:hint="Add your favourite locations"/>

    <Button
            android:id="@+id/fragment_account_button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_account_et_location"
            android:text="Add Location"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/fragment_account_rv_location"
            android:layout_width="match_parent"
            android:layout_below="@+id/fragment_account_button_add"
            android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>